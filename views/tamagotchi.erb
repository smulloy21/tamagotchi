<meta http-equiv="refresh" content="5" />

<h2><%= @@name %></h2>

<% if @@my_pet.is_alive() %>
  <%if @@sleep == true %>
    <img src="img/sleep.png" alt="asleep tamogatchi" />
    <% @@sleep = false %>
  <%elsif @@my_pet.happy_level() > 5 %>
    <img src="img/tamagotchi.png" alt="tamagotchi">
  <% else %>
    <img src="img/sad.png" alt="sad tamagotchi" />
  <% end %>
<% else %>
  <img src="img/dead.png" alt="dead tamogatchi" />
<% end %>



<div class="btn-div">
  <form action="/feed" method="post">
    <button type="submit" class="btn btn-info">Feed</button>
  </form>

  <form action="/sleep" method="post">
    <button type="submit" class="btn btn-info">Sleep</button>
  </form>

  <form action="/play" method="post">
    <button type="submit" class="btn btn-info">Play</button>
  </form>

  <form action="/clean" method="post">
    <button type="submit" class="btn btn-info">Clean</button>
  </form>
</div>
  <!-- <form action="/time" method="post"> -->
    <!-- <button type="submit" class="btn btn-info">Time Passing</button>
  </form> -->
<br>
<br>
<br>
<% if @@my_pet.is_alive() %>

  <% if @@my_pet.food_level() < 6 %>
    <h3><%= @@name %> is hungry</h3>
  <% end %>
  <% if @@my_pet.sleep_level() < 6 %>
    <h3><%= @@name %> is sleepy</h3>
  <% end %>
  <% if @@my_pet.play_level() < 6 %>
    <h3><%= @@name %> wants to play</h3>
  <% end %>
  <% if @@my_pet.clean_level() < 6 %>
    <h3><%= @@name %> needs a bath</h3>
  <% end %>
<br><br>
<h3><%= @@name %>'s food level is: <%= @@my_pet.food_level() %></h3>
<h3><%= @@name %>'s sleep level is: <%= @@my_pet.sleep_level() %></h3>
<h3><%= @@name %>'s play level is: <%= @@my_pet.play_level() %></h3>
<h3><%= @@name %>'s clean level is: <%= @@my_pet.clean_level() %></h3>
<h3><%= @@name %>'s happy level is: <%= @@my_pet.happy_level() %></h3>

<% else %>

<h3><%= @@name %> has died</h3>

<% end %>
